                                <Setter Property="Background" Value="{Binding RowBackground}"/>
                                <!--<Setter Property="Foreground" Value="{Binding OrderTypeForeGroundCol}"/>-->
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <!--Status-->
