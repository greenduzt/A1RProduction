                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                <Setter Property="Background" Value="{Binding RowBackground}"/>
                                <!--<Setter Property="Foreground" Value="{Binding OrderTypeForeGroundCol}"/>-->
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <!--Machine Name-->
                    <DataGridTextColumn Header="Machine Name" Binding="{Binding Machine.MachineName}" Width="*">
