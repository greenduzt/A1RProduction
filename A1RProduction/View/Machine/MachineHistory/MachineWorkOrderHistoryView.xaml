                                <!--<Setter Property="Foreground" Value="{Binding OrderTypeForeGroundCol}"/>-->
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>

                    <!--Completed By-->
                    <DataGridTextColumn Header="Completed By" Binding="{Binding User.FullName}" Width="Auto">
