                            <DataTemplate>
                                <Button Content="PRINT" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="35" HorizontalContentAlignment="Left" Margin="0,0,0,0" Command="{Binding DataContext.PrintCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}" ToolTip="Print work order">
