                                                <TextBlock Text="{Binding RawProduct.Description}" TextWrapping="Wrap" Width="220"/>
                                            </RadioButton.Content>
                                        </RadioButton>
                                    </HierarchicalDataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
