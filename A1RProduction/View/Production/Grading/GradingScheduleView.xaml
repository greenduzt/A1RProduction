                                    <HierarchicalDataTemplate>
                                        <RadioButton  IsChecked="{Binding Checked,Mode=TwoWay}" GroupName="{Binding GroupID}" Foreground="#404040" Command="{Binding DataContext.OptionClickedCommand,RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding}" IsEnabled="{Binding IsEnabled,Mode=TwoWay}" >
