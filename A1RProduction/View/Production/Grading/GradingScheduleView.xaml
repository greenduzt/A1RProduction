                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Button Grid.Row="0"  Grid.Column="0" Height="32" ToolTip="Click to View Formula" FontSize="17" Command="{Binding ViewCommand}" Content="VIEW" Foreground="#FF575555"  />
                                <Button Grid.Row="0"  Grid.Column="1" Height="32" ToolTip="Click to Print Formula" FontSize="17" Command="{Binding PrintCommand}"  Foreground="#FF575555" >
