                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Mixing Shift" Visibility="{Binding IsReqDateVisible}" Margin="0,0,8,5" TextAlignment="Left" TextWrapping="Wrap"  FontWeight="Bold" FontSize="20" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MixingShift}" Visibility="{Binding IsReqDateVisible}" Margin="0,0,8,5" Padding="3,0,0,0" TextAlignment="Left" TextWrapping="Wrap" FontWeight="Bold" FontSize="20"  />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Notes" Margin="0,0,8,5" TextAlignment="Left" FontSize="20" FontWeight="Bold" Visibility="{Binding IsNotesVisible}"  />
                            <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Notes}" Margin="0,0,8,5" Padding="3,0,0,0" TextAlignment="Left" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" Visibility="{Binding IsNotesVisible}" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Formula Option" Margin="0,0,10,5" TextAlignment="Left" FontWeight="Bold" FontSize="20" Visibility="{Binding FormulaOptionVisibility}" />

                            <TextBlock Grid.Row="0" Grid.RowSpan="3"  Grid.Column="2" Text="{Binding GradeString}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,10,5" TextAlignment="Left" FontWeight="Bold" FontSize="26" />

                            <ListBox ItemsSource="{Binding FormulaOptions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Visibility="{Binding FormulaOptionVisibility}" FontSize="20" Background="{Binding ItemBackgroundColour}" Foreground="#404040" BorderThickness="0" >
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <HierarchicalDataTemplate>
                                        <RadioButton  IsChecked="{Binding Checked, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" GroupName="{Binding GroupID}" Foreground="#404040" Command="{Binding DataContext.OptionClickedCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding}" IsEnabled="{Binding IsEnabled, Mode=TwoWay}" >
                                            <TextBlock Text="{Binding RawProduct.Description,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Width="auto"/>
                                        </RadioButton>
                                    </HierarchicalDataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Button Grid.Row="0"  Grid.Column="3" Height="40" Width=" 250" HorizontalAlignment="Right" ToolTip="Click to View Formula" FontSize="20" Command="{Binding ViewCommand}" Content="VIEW FORMULA" Foreground="#FF575555" Margin="2" />
                            <Button Grid.Row="1"  Grid.Column="3" Height="40" Width=" 250" HorizontalAlignment="Right" ToolTip="Click to Print Formula" FontSize="20" Command="{Binding PrintCommand}"  Foreground="#FF575555" Margin="2">
                                <TextBlock><Run Text=" PRINT" /><Run Text=" " /><Run Text="{Binding PrintCounter}" Foreground="Red" FontSize="12"  /></TextBlock>
                            </Button>
                            <Button Grid.Row="2"  Grid.Column="3" Height="40" Width=" 250" HorizontalAlignment="Right" ToolTip="Click this button if you have completed one block/log" FontSize="20" 
                                    Command="{Binding CompletedCommand}" Content="COMPLETE" Foreground="#FF575555" Margin="2"  >
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded" >
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation BeginTime="0:0:2" Duration="0:0:1" Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)" From="#FFDDDDDD"  To="Red" AutoReverse="True" 
            										RepeatBehavior="{Binding RepeatAnimation}" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            <TextBlock Grid.Row="6" Grid.ColumnSpan="4" Text="" Margin="0,2,0,0" TextAlignment="Left" FontWeight="Bold" FontSize="14" Background="{Binding RowBackgroundColour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>

                <!--RAW PRODUCT CODE-->
                <DataGrid.Columns>
                    <!--DESCRIPTION-->
                    <DataGridTextColumn Binding="{Binding RawProduct.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" FontSize="42">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock TextWrapping="Wrap" Text="Description" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="Padding" Value="0,4,0,3" />
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
