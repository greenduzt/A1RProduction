                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Order No" Margin="0,0,10,5" TextAlignment="Left" FontWeight="Bold" FontSize="14" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SalesOrderId}" Grid.ColumnSpan="2" Margin="0,0,10,8" Padding="3,0,0,0"  TextAlignment="Left" FontWeight="Bold" FontSize="14" />

                            <!--<TextBlock Grid.Row="1" Grid.Column="0" Text="Sales Order" Margin="0,0,10,5" TextAlignment="Left" FontWeight="Bold" FontSize="14" Visibility="{Binding SalesOrderVisibility}" />
