<UserControl x:Class="A1QSystem.View.Customers.AddCustomerMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	         mc:Ignorable="d"
	         d:DesignWidth="1050" d:DesignHeight="800" x:Name="AddCustomerMain">
    <UserControl.Resources>
      

        <Storyboard x:Key="BackQuoteMouseEnter">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="BackQuoteTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.2"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="BackQuoteTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.2"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="BackQuoteMouseLeve">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="BackQuoteTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.2"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="BackQuoteTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.2"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="ExitMainMenuMouseEnter">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="ExitMainMenuTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.2"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="ExitMainMenuTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.2"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="ExitMainMenuMouseLeve">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="ExitMainMenuTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.2"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="ExitMainMenuTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.2"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="homeMouseEnter">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="HomeTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.2"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="HomeTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.2"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="homeMouseLeve">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="HomeTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.2"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="HomeTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.2"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="customerMouseEnter">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="CustomerTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.2"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="CustomerTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.2"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="customerMouseLeve">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="CustomerTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.2"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="CustomerTextBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.2"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Mouse.MouseEnter" SourceName="BackQuoteTextBlock">
            <BeginStoryboard x:Name="BackQuoteMouseEnter" Storyboard="{StaticResource BackQuoteMouseEnter}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Mouse.MouseLeave" SourceName="BackQuoteTextBlock">
            <BeginStoryboard x:Name="BackQuoteMouseLeve" Storyboard="{StaticResource BackQuoteMouseLeve}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Mouse.MouseEnter" SourceName="ExitMainMenuTextBlock">
            <BeginStoryboard x:Name="ExitMainMenuMouseEnter" Storyboard="{StaticResource ExitMainMenuMouseEnter}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Mouse.MouseLeave" SourceName="ExitMainMenuTextBlock">
            <BeginStoryboard x:Name="ExitMainMenuMouseLeve" Storyboard="{StaticResource ExitMainMenuMouseLeve}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Mouse.MouseEnter" SourceName="HomeTextBlock">
            <BeginStoryboard x:Name="homeMouseEnter" Storyboard="{StaticResource homeMouseEnter}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Mouse.MouseLeave" SourceName="HomeTextBlock">
            <BeginStoryboard x:Name="homeMouseLeve" Storyboard="{StaticResource homeMouseLeve}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Mouse.MouseEnter" SourceName="CustomerTextBlock">
            <BeginStoryboard x:Name="customerMouseEnter" Storyboard="{StaticResource customerMouseEnter}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Mouse.MouseLeave" SourceName="CustomerTextBlock">
            <BeginStoryboard x:Name="customerMouseLeve" Storyboard="{StaticResource customerMouseLeve}"/>
        </EventTrigger>
    </UserControl.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="137*"/>

        </Grid.ColumnDefinitions>
        <TextBlock Background="#FF938F8F" Foreground="White" Padding="0,3,0,0" Margin="0,37,0,0" TextWrapping="Wrap" Text="Add New Customer" TextAlignment="Center" FontWeight="Bold" FontSize="18" FontFamily="Verdana" Height="32" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="A1R Operating System V1.4 2015" Padding="7,3,0,0" FontSize="10" FontWeight="Bold" Margin="0,0,0,7" Foreground="White" Height="22" VerticalAlignment="Bottom" Grid.Column="0" Background="#FF6A6868" Grid.ColumnSpan="2" />
        <Grid Grid.ColumnSpan="2" Margin="8,7,8,0" Height="26" VerticalAlignment="Top">
            <TextBlock x:Name="NewQuoteTextBlock" Padding="1,1.5,0,1"  HorizontalAlignment="Left" Width="111" FontSize="13" Text="NEW CUSTOMER" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Height="22" VerticalAlignment="Top" Background="#FFC33333" Foreground="White" FontWeight="Bold" Margin="185,0,0,0" />
            <TextBlock x:Name="HomeTextBlock" Style="{StaticResource HoverEffect}" HorizontalAlignment="Left" Width="55" FontSize="12" Text="HOME" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Height="18" VerticalAlignment="Top" Margin="0,3,0,0">
                <TextBlock.InputBindings>
                    <MouseBinding Command="{Binding NavHomeCommand}" MouseAction="LeftClick" />
                </TextBlock.InputBindings>
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock x:Name="CustomerTextBlock" Style="{StaticResource HoverEffect}" FontSize="12" Text="CUSTOMERS" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Height="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="71" Margin="87,3,0,0">
                <TextBlock.InputBindings>
                    <MouseBinding Command="{Binding NavCustomerCommand}" MouseAction="LeftClick" />
                </TextBlock.InputBindings>
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <Label HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="17" Margin="62,1,0,0">
                <Label.Background>
                    <ImageBrush ImageSource="/A1QSystem;component/Images/NavArrow.png"/>
                </Label.Background>
            </Label>
            <Label HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="17" Margin="166,0,0,0">
                <Label.Background>
                    <ImageBrush ImageSource="/A1QSystem;component/Images/NavArrow.png"/>
                </Label.Background>
            </Label>

        </Grid>
        <Label Content="Company Name" HorizontalAlignment="Left" Height="30" Margin="27,152,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="First Name" HorizontalAlignment="Left" Height="30" Margin="27,188,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Height="30" Margin="27,222,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="Telephone" HorizontalAlignment="Left" Height="30" Margin="27,257,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="Mobile" HorizontalAlignment="Left" Height="30" Margin="27,287,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="Email" HorizontalAlignment="Left" Height="30" Margin="27,320,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="Address" HorizontalAlignment="Left" Height="30" Margin="27,355,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="City" HorizontalAlignment="Left" Height="30" Margin="27,385,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="State" HorizontalAlignment="Left" Height="30" Margin="27,420,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <Label Content="Postcode" HorizontalAlignment="Left" Height="30" Margin="27,455,0,0" VerticalAlignment="Top" Width="124" FontFamily="Verdana" Grid.Column="1"/>
        <TextBox x:Name="txtAddCusCompName" Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="30" Margin="149,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontFamily="Verdana" Validation.ValidationAdornerSite="{Binding ElementName=lblCompNameError}" Grid.Column="1" />
        <Label x:Name="lblCompNameError" Content="{Binding (Validation.Errors).CurrentItem.ErrorContent, ElementName=txtAddCusCompName}" HorizontalAlignment="Left" Height="26" Margin="358,156,0,0" VerticalAlignment="Top" Width="155" Padding="4,4,0,0" FontWeight="Bold" Foreground="Red" RenderTransformOrigin="0.612,-2.269" Grid.Column="1" />
        <TextBox x:Name="txtAddCusFName" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="30" Margin="149,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"  FontFamily="Verdana" Validation.ValidationAdornerSite="{Binding ElementName=lblFirstNameError}" Grid.Column="1" />
        <Label x:Name="lblFirstNameError" Content="{Binding (Validation.Errors).CurrentItem.ErrorContent, ElementName=txtAddCusFName}" HorizontalAlignment="Left" Height="26" Margin="358,187,0,0" VerticalAlignment="Top" Width="155" Padding="4,4,0,0" FontWeight="Bold" Foreground="Red" RenderTransformOrigin="0.612,-2.269" Grid.Column="1" />
        <TextBox x:Name="txtAddCusLName" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="30" Margin="149,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"  FontFamily="Verdana" Validation.ValidationAdornerSite="{Binding ElementName=lblLastNameError}" Grid.Column="1" />
        <Label x:Name="lblLastNameError" Content="{Binding (Validation.Errors).CurrentItem.ErrorContent, ElementName=txtAddCusLName}" HorizontalAlignment="Left" Height="26" Margin="358,220,0,0" VerticalAlignment="Top" Width="155" Padding="4,4,0,0" FontWeight="Bold" Foreground="Red" RenderTransformOrigin="0.612,-2.269" Grid.Column="1" />
        <TextBox x:Name="txtAddCusTele" Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="30" Margin="149,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="97"  MaxLength="12" FontFamily="Verdana" Validation.ValidationAdornerSite="{Binding ElementName=lblTelephoneError}" Grid.Column="1" />
        <Label x:Name="lblTelephoneError" Content="{Binding (Validation.Errors).CurrentItem.ErrorContent, ElementName=txtAddCusTele}" HorizontalAlignment="Left" Height="26" Margin="358,257,0,0" VerticalAlignment="Top" Width="155" Padding="4,4,0,0" FontWeight="Bold" Foreground="Red" RenderTransformOrigin="0.612,-2.269" Grid.Column="1" />
        <TextBox x:Name="txtAddCusMobile" Text="{Binding Mobile, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="30" Margin="149,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="97" MaxLength="12"  FontFamily="Verdana" Validation.ValidationAdornerSite="{Binding ElementName=lblMobileError}" Grid.Column="1" />
        <Label x:Name="lblMobileError" Content="{Binding (Validation.Errors).CurrentItem.ErrorContent, ElementName=txtAddCusMobile}" HorizontalAlignment="Left" Height="26" Margin="358,288,0,0" VerticalAlignment="Top" Width="155" Padding="4,4,0,0" FontWeight="Bold" Foreground="Red" RenderTransformOrigin="0.612,-2.269" Grid.Column="1" />
        <TextBox x:Name="txtAddCusEmail" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="30" Margin="149,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"  FontFamily="Verdana" Validation.ValidationAdornerSite="{Binding ElementName=lblEmailError}" Grid.Column="1" />
        <Label x:Name="lblEmailError" Content="{Binding (Validation.Errors).CurrentItem.ErrorContent, ElementName=txtAddCusEmail}" HorizontalAlignment="Left" Height="26" Margin="358,323,0,0" VerticalAlignment="Top" Width="155" Padding="4,4,0,0" FontWeight="Bold" Foreground="Red" RenderTransformOrigin="0.612,-2.269" Grid.Column="1" />
        <TextBox x:Name="txtAddCusAddress" Text="{Binding Address}" HorizontalAlignment="Left" Height="30" Margin="149,352,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"  FontFamily="Verdana" Grid.Column="1"/>
        <TextBox x:Name="txtAddCusCity" Text="{Binding City}" HorizontalAlignment="Left" Height="30" Margin="149,385,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"  FontFamily="Verdana" Grid.Column="1"/>
        <ComboBox x:Name="cmbAddCusState" Text="{Binding State}" HorizontalAlignment="Left" Height="30" Margin="149,420,0,0" VerticalAlignment="Top" Width="97" Grid.Column="1"  >
            <ComboBoxItem x:Name="ACT" Content="ACT"/>
            <ComboBoxItem x:Name="NSW" Content="NSW"/>
            <ComboBoxItem x:Name="NT" Content="NT"/>
            <ComboBoxItem x:Name="QLD" Content="QLD"/>
            <ComboBoxItem x:Name="SA" Content="SA"/>
            <ComboBoxItem x:Name="TAS" Content="TAS"/>
            <ComboBoxItem x:Name="VIC" Content="VIC"/>
            <ComboBoxItem x:Name="WA" Content="WA"/>
        </ComboBox>
        <TextBox x:Name="txtAddCusPostcode" Text="{Binding PostCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="30" Margin="149,455,0,0" MaxLength="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="97"  FontFamily="Verdana"  Validation.ValidationAdornerSite="{Binding ElementName=lblPostcodeError}" Grid.Column="1" />
        <Label x:Name="lblPostcodeError" Content="{Binding (Validation.Errors).CurrentItem.ErrorContent, ElementName=txtAddCusPostcode}" HorizontalAlignment="Left" Height="26" Margin="358,455,0,0" VerticalAlignment="Top" Width="155" Padding="4,4,0,0" FontWeight="Bold" Foreground="Red" RenderTransformOrigin="0.612,-2.269" Grid.Column="1" />
        <Button x:Name="btnAddFreigth" Content="ADD" HorizontalAlignment="Left" Height="25" Margin="224,500,0,0" VerticalAlignment="Top" Width="62" Command="{Binding AddCommand}" FontFamily="Calibri" FontSize="14" Grid.Column="1"  />
        <Button x:Name="btnAddFreigth_Copy" Content="CLEAR" HorizontalAlignment="Left" Height="25" Margin="291,500,0,0" VerticalAlignment="Top" Width="62" Command="{Binding ClearCommand}" FontFamily="Calibri" FontSize="14" RenderTransformOrigin="1.113,0.56" Grid.Column="1" />
        <TextBlock x:Name="BackQuoteTextBlock" Style="{StaticResource HoverEffect}" Height="25" HorizontalAlignment="Right" Margin="0,0,113,33" Width="104" VerticalAlignment="Bottom" FontSize="12" Text="GO BACK" FontWeight="Bold" Padding="0,4,0,0" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <TextBlock.InputBindings>
                <MouseBinding Command="{Binding BackCommand}" MouseAction="LeftClick" />
            </TextBlock.InputBindings>
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="ExitMainMenuTextBlock" Style="{StaticResource HoverEffect}" Height="25" HorizontalAlignment="Right" Margin="0,0,13,33" VerticalAlignment="Bottom" Width="100" FontSize="12" Text="EXIT" FontWeight="Bold" Padding="0,4,0,0" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" MouseLeftButtonDown="ExitMainMenuTextBlock_MouseLeftButtonDown" Grid.Column="1">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

    </Grid>
</UserControl>
