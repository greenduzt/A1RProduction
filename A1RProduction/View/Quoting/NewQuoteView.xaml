                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock TextAlignment="Center" Text="CLEAR" TextWrapping="Wrap" FontSize="12"  RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right"  Foreground="#FFD6CECE" Width="92" Background="#FFE0DDDD" Padding="0,44,0,0" Margin="0,0,206.261,0" Height="25" VerticalAlignment="Bottom" />
            <TextBlock x:Name="ClearTextBlock" Style="{StaticResource HoverEffect}" Height="25" VerticalAlignment="Bottom" FontSize="12" Text="CLEAR" FontWeight="Bold" Padding="0,4,0,0" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right" Width="92" Margin="0,0,206.261,0">
                <TextBlock.InputBindings>
                    <MouseBinding Command="{Binding ClearFields}" MouseAction="LeftClick" />
                </TextBlock.InputBindings>
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock TextAlignment="Center" Text="CREATE" TextWrapping="Wrap" FontSize="12"  RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right"  Foreground="#FFD6CECE" Width="92" Background="#FFE0DDDD" Padding="0,44,0,0" Margin="0,0,308.261,0" Height="25" VerticalAlignment="Bottom" />
            <TextBlock x:Name="CreateQuoteTextBlock" IsEnabled="{Binding CreteQuoteActive}" Style="{StaticResource HoverEffect}" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="92" FontSize="12" Text="CREATE" FontWeight="Bold" Padding="0,4,0,0" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0,0,308.261,0">
                <TextBlock.InputBindings>
                    <MouseBinding Command="{Binding CreateCommand}" MouseAction="LeftClick" />
                </TextBlock.InputBindings>
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
