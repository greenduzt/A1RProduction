<Application x:Class="A1QSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:dg="clr-namespace:Microsoft.Windows.Controls;assembly=WpfToolkit"
             xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:cm="clr-namespace:System.ComponentModel;assembly=WindowsBase"    
             xmlns:local="clr-namespace:A1QSystem.DB"
             StartupUri="PageSwitcher.xaml">
           <!--  StartupUri="View/LoginView.xaml">
             StartupUri="MainWindow.xaml">-->
            
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="HoverEffect">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="Background" Value="#FFC33333" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />                   
                </Trigger>
            </Style.Triggers>
        </Style>       

    </Application.Resources>
</Application>
